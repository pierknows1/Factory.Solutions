@{
    Layout = "_Layout";
}

@using Factory.Models;

    <h1>Engineers</h1>

<hr />

    @if (Model.Count == 0)
    {
        <p>No engineers have been added.</p>
    }
    else
    {
    
        @foreach (Engineer engineer in Model)
            {
                @engineer.EngineerName
                @Html.ActionLink("Details", "Details", new { id = engineer.EngineerId })
                 
            }
    }
<hr />

    @Html.ActionLink("Add New Engineer", "Create", "Engineers", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Return Home", "Index", "Home", null, new { @class = "btn btn-secondary" })

