@{
    Layout = "_Layout";
}

@using Factory.Models;

    <h1>Machines</h1>
<hr />

@if (Model.Count == 0)
{
    <p>No machines have been added yet.</p>
}
else
{
        @foreach (Machine machine in Model)
        {
            @machine.MachineName
            @machine.ManufactureDate
            @Html.ActionLink("Details", "Details", new { id = machine.MachineId })
        }
}

    @Html.ActionLink("Add New Machine", "Create", "Machines", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Return Home", "Index", "Home", null, new { @class = "btn btn-secondary" })